@{
    ViewBag.Title = "Trang chủ tài xế";
    Layout = "~/Views/Shared/LayoutDriver.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Trang chủ tài xế</h2>
    <div class="text-center mb-4">
        @*<img src="@Url.Content($"~/Content/avatars/{ViewBag.Avatar}")" alt="Avatar" style="height: 100px; width: 100px; border-radius: 50%;">*@
        <h3 class="mt-2">@ViewBag.UserName</h3>
    </div>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Nhận hàng</h5>
                    <p class="card-text text-secondary">Xem và nhận các đơn hàng.</p>
                    <a href="@Url.Action("AcceptOrder", "DriverHome")" class="btn btn-primary">Nhận hàng</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Trang cá nhân</h5>
                    <p class="card-text text-secondary">Xem và chỉnh sửa thông tin cá nhân của bạn.</p>
                    <a href="@Url.Action("Profile", "DriverHome")" class="btn btn-primary">Xem trang cá nhân</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Đơn hàng đã nhận</h5>
                    <p class="card-text text-secondary">Xem danh sách đơn hàng đã nhận.</p>
                    <a href="@Url.Action("AcceptedOrders", "DriverHome")" class="btn btn-primary">Xem đơn hàng đã nhận</a>
                </div>
            </div>
        </div>
    </div>
</div>
