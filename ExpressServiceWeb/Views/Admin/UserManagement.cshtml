@model IEnumerable<ExpressServiceWeb.Models.User>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Quản lý người dùng</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Tạo người dùng mới</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Họ và tên</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.email</td>
                    <td>@user.full_name</td>
                    <td>@user.phone_number</td>
                    <td>@user.role</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = user.user_id })" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = user.user_id })" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
