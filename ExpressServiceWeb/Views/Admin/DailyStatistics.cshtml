@model ExpressServiceWeb.Models.StatisticsViewModel

@{
    ViewBag.Title = "Thống kê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Thống kê</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Chọn ngày để xem thống kê</h5>
                    @using (Html.BeginForm("Statistics", "AdminHome", FormMethod.Get))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.SelectedDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                        </div>
                        <button type="submit" class="btn btn-primary">Xem thống kê</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Doanh thu</h5>
                    <p class="card-text text-secondary">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center" style="background-color: #e3f2fd;">
                    <h5 class="card-title text-primary">Số đơn hàng</h5>
                    <p class="card-text text-secondary">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
    </div>
</div>
